{
  "name": "app-runner",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "concurrently": "^4.0.1"    
  },

  "scripts": {
    "client": "cd client && yarn start",
    "server": "cd server && yarn server",
    "install_client_deps": "cd client && yarn install",
    "install_server_deps": "cd server && yarn install",
    "install_deps": "concurrently \"yarn install_client_deps\" \"yarn install_server_deps\"",
    "startRunner": "concurrently --kill-others-on-fail \"yarn server\" \"HOSTNAME=$HOSTNAME yarn client\""
  }

}

