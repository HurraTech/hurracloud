version: '2.3'
services:
  <%=app_unique_id%>_runner:
    image: aimannajjar/hurracloud:app-runner-v1
    user: root
    volumes:
      - <%=host_app_path%>/../../../app-runner/src:/usr/src/app-runner/src
      - <%=host_app_path%>/../../../app-runner/node_modules:/usr/src/app-runner/node_modules
      - <%=host_app_path%>/../../../app-runner/public:/usr/src/app-runner/public
      - <%=host_app_path%>/../../../app-runner/package.json:/usr/src/app-runner/package.json
      - <%=host_app_path%>/../../../app-runner/yarn.lock:/usr/src/app-runner/yarn.lock
      - <%=host_app_path%>/CONTENT/ui:/usr/src/app-runner/src/HurraApp ## Use only this line eventually, rest should be baked into image
    ports:
      - <%=port_number%>:3000
    networks:
      - <%=app_unique_id%>_runner
    environment:
      - NODE_ENV=development
      - REACT_APP_AUID=<%=app_unique_id%>
    command: sh -c "yarn install && yarn start"    

networks:
  <%=app_unique_id%>_runner: {}
